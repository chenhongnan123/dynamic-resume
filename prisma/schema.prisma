generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-arm64-openssl-3.0.x", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  sub       String   @unique // 第三方平台的唯一id
  platform  String   // 第三方平台标识，如：github google
  username  String   @unique
  avatar    String
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name_en  String?  // 英文名字
  name_zh  String?  // 中文名字
  position_en  String?  // 英文职位
  position_zh  String?  // 中文职位
  introduction_en  String?  // 中文个人简介
  introduction_zh  String?  // 英文个人简介
  skills_en  String?  // 英文技能
  skills_zh  String?  // 中文技能
  hireLink   String?   // 招聘链接
  fileName   String?   // 个人简介文件名称
  filePath   String?   // 个人简介文件下载地址
}

model ProjectExp {
  id        Int      @id @default(autoincrement())
  timestamp BigInt?  @unique // 唯一时间戳区分
  lang      String?   // 语言
  order Int?  // 顺序
  userid         Int   // 用户Id
  usersub         String   // 用户第三方平台的id
  username         String   // 用户名称
  durationTime  String?   // Time range
  technology_stack_en  String?   // 英文技术栈
  technology_stack_zh  String?   // 中文技术栈
  company_name_en  String?    // 英文公司名称
  company_name_zh  String?    // 中文公司名称
  details_en  String?    // 英文项目详情
  details_zh  String?    // 中文项目详情
  fileName  String?    // 文件名称
  fileExtension  String?    // 文件后缀
  fileSize  Int?    // 文件大小
  filePath  String?    // 文件路径
  fileType  String?    // 文件类型
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
